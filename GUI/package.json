{
  "name": "hst-app",
  "version": "1.7.1",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.hst.windowsutility",
    "productName": "HST-WINDOWS-UTILITY",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "bin/**/*"
    ],
    "asarUnpack": [
      "bin/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": "x64"
        }
      ],
      "icon": "build/hst-high-resolution-logo-transparent.ico",
      "requestedExecutionLevel": "requireAdministrator",
      "artifactName": "${productName}-${version}.${ext}"
    }
  }
}